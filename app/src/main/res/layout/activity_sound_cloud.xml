<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.margo.farmiu.downloader.SoundCloudActivity">

<com.daimajia.numberprogressbar.NumberProgressBar
    android:id="@+id/number_progress_bar"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    custom:progress_unreached_color="#CCCCCC"
    custom:progress_reached_color="@android:color/holo_red_dark"

    custom:progress_unreached_bar_height="2.75dp"
    custom:progress_reached_bar_height="4.5dp"

    custom:progress_text_size="20sp"
    custom:progress_text_color="#3498DB"
    custom:progress_text_offset="1dp"
    custom:progress_text_visibility="visible"
    custom:progress_max="100">
</com.daimajia.numberprogressbar.NumberProgressBar>
<TextView
    android:id="@+id/text_view"
    android:textColor="@android:color/holo_red_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>
